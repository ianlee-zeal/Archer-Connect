{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "types": ["node"]
  },
  "lib": [
    "es2018",
    "dom"
  ],
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.d.ts",
    "./node_modules/jsrsasign-reduced/*.js",
    "./node_modules/string-strip-html/dist/*.js",
    "./node_modules/ranges-apply/dist/*.js",
    "./node_modules/ranges-merge/dist/*.js",
    "./node_modules/ranges-push/dist/*.js",
    "./node_modules/@larscom/ngrx-store-storagesync/fesm2015/*.js",
    "./node_modules/ngx-quill/fesm2015/*.js",
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "./node_modules/ranges-apply/dist/*.umd.js",
    "./node_modules/ranges-merge/dist/*.umd.js",
    "./node_modules/ranges-push/dist/*.umd.js",
    "./node_modules/string-strip-html/dist/*.umd.js",
  ]
}
